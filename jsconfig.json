{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "compileOnSave": false
}
